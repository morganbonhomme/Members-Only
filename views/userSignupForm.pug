extends layout

block content
  .backgroundrocket
    .container.mt-5
      .row.justify-content-md-center
        .col-8.p-5.notsoclear-background
          h1.text-center Sign-up
          form(method='POST', action='')
            .form-group
              label(for='firstName') First Name
              input.form-control(type='text', name='firstName', placeholder='First Name', value=(undefined===user ? '' : user.firstName))
            .form-group
              label(for='lastName') Last Name
              input.form-control(type='text', name='lastName', placeholder='Last Name', value=(undefined===user ? '' : user.lastName))
            .form-group
              label(for='username') Username
              input.form-control(type='text', name='username', placeholder='Username', value=(undefined===user ? '' : user.username))
            .form-group
              label(for='password') Password
              input.form-control(type='password', name='password', placeholder='Password')
              small.form-text.text-muted Your password must be 6 characters long minimum.
            .form-group
              label(for='confirmPassword') Confirm Password
              input.form-control(type='password', name='confirmPassword', placeholder='Confirm Password')
            .text-center
              button.btn.red-button(type='submit') Sign up
          .row.mt-4
          if errors
            for error in errors
              .alert.alert-info!= error.msg
          .text-center.mt-4
            a.link(href='/log-in') Already member ? Log in

